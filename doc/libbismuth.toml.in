[library]
version = "@VERSION@"
description = "Based on libadwaita responsive widgets, without all the baggage."
authors = "Fyra Labs & Purism SPC"
license = "LGPL-2.1-or-later"
browse_url = "https://github.com/tau-OS/libbismuth/"
repository_url = "https://github.com/tau-OS/libbismuth.git"
website_url = "https://docs.developers.tauos.co/libbismuth/"
logo_url = "Bismuth.svg"
dependencies = [
  "GObject-2.0",
  "Gtk-4.0",
]
devhelp = true
search_index = true

[dependencies."GObject-2.0"]
name = "GObject"
description = "The base type system library"
docs_url = "https://developer.gnome.org/gobject/stable"

[dependencies."Gtk-4.0"]
name = "Gtk"
description = "The GTK toolkit"
docs_url = "https://docs.gtk.org/gtk4/"

[theme]
name = "basic"
show_index_summary = true
show_class_hierarchy = true

[source-location]
# The base URL for the web UI
base_url = "https://github.com/tau-OS/libbismuth/blob/main/"
# The format for links, using "filename" and "line" for the format
file_format = "{filename}#L{line}"

